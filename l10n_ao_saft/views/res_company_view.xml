<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_res_company_inherit_form" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="agt" string="AGT">
                        <group>
                            <group>
                                <field name="agt_cert_number" placeholder="0000/AGT/2022" />
                                <field name="agt_product_name" placeholder="Software name..." />
                                <field name="agt_product_version" placeholder="Software version..." />
                            </group>
                            <group>

                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>