<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="ir_module_category_hr_loan" model="ir.module.category">
            <field eval="1" name="visible"/>
            <field name="parent_id" ref="base.module_category_human_resources"/>
            <field name="name">Loan/Salary Advance</field>
        </record>

        <record id="group_hr_loan_own_documents" model="res.groups">
            <field name="name">User: Own Documents Only</field>
            <field name="category_id" ref="ir_module_category_hr_loan"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will have access to his own data in the Hr Loan application.</field>
        </record>

        <record id="group_hr_loan_all_documents" model="res.groups">
            <field name="name">User: All Documents</field>
            <field name="category_id" ref="ir_module_category_hr_loan"/>
            <field name="implied_ids" eval="[(4, ref('group_hr_loan_own_documents'))]"/>
            <field name="comment">the user will have access to all records of everyone in the Hr Loan application.
            </field>
        </record>

        <record id="group_hr_loan_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="ir_module_category_hr_loan"/>
            <field name="implied_ids" eval="[(4, ref('group_hr_loan_all_documents'))]"/>
        </record>


        <record id="hr_loan_personal_rule" model="ir.rule">
            <field name="name">Personal Loan/Salary Advance</field>
            <field ref="model_hr_loan" name="model_id"/>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('user_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('hr_loan.group_hr_loan_own_documents'))]"/>
        </record>

        <record id="hr_loan_see_all" model="ir.rule">
            <field name="name">All Loan/Salary Advance</field>
            <field ref="model_hr_loan" name="model_id"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('hr_loan.group_hr_loan_all_documents'))]"/>
        </record>


        <record id="rule_hr_loan" model="ir.rule">
            <field name="name">Loan Request Multi Company</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|', ('company_id', '=', False),
                                        ('company_id', 'child_of', [user.company_id.id])]</field>
        </record>

