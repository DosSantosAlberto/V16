<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_loan_salary_amortization_view_form" model="ir.ui.view">
            <field name="name">hr.loan.salary.amortization.view.form</field>
            <field name="model">hr.loan.salary.amortization</field>
            <field name="arch" type="xml">
                <form string="Loan or Salary Advance Amortization">
                    <sheet>
                        <group col="4">
                            <field name="employee_id" required="1"
                                   options="{'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="loan_id"
                                   domain="[('employee_id', '=', employee_id), ('balance_amount', '!=', 0.0), ('state', '=', 'approve')]"
                                   required="1"
                                   options="{'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="currency_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="total_amount"/>
                            <field name="total_amount_facade" invisible="1"/>
                            <field name="parcel_for_amortize" readonly="1"/>
                            <field name="installments" required="1"/>
                            <field name="received_amount" required="1"/>
                        </group>
                        <group string="Attachment(s)">
                            <field name="attachment_ids" widget="many2many_binary" string="Attach a file" nolabel="1"/>
                        </group>
                        <notebook>
                            <page string="Installment">
                                <field name="loan_line_ids">
                                    <tree string="Installments" delete="0" create="0" editable="bottom">
                                        <field name="date" readonly="1"/>
                                        <field name="amount" readonly="1"/>
                                        <field name="paid" readonly="1"/>
                                        <field name="line_id" invisible="1"/>
                                        <field name="loan_id" invisible="1"/>
                                        <field name="amortization_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <footer>
                            <button name="action_amortize" string="Amortize"
                                    type="object" class="oe_highlight"/>
                            or
                            <button string="Cancel Wizard" special="cancel" class="oe_link"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_loan_salary_amortization_action" model="ir.actions.act_window">
            <field name="name">Loan or Salary Advance Amortization</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.loan.salary.amortization</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="hr_hr_loan_salary_amortization_menu" name="Amortização de Empréstimo e Adiantamento Salarial"
                  parent="menu_hr_loans_and_advances"
                  groups="hr_loan.res_groups_amortize_loan_salary"
                  action="hr_loan_salary_amortization_action" sequence="11"/>

    </data>
</odoo>