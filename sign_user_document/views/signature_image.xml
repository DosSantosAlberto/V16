<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="signature_image_form" model="ir.ui.view">
            <field name="name">Signature Image</field>
            <field name="model">signature.image</field>
            <field name="arch" type="xml">
                <form string="SAFT FILE" create="false">
                    <sheet>


                        <group>
                            <group>
                                <field name="company_id"/>
                            </group>
                               <group>
                            <field name="signature_image" widget="image" string="Signature"
                                   options="{'full_name': 'display_name', 'size': ['',200]}" style="width:200px;height:50px;"/> </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>