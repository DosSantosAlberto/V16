<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="overtime_form_view" model="ir.ui.view">
            <field name="name">hr.overtime.form</field>
            <field name="model">hr.overtime</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <header>
                        <button name="post" string="Posted" class="oe_highlight" states="draft" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="employee"/>
                            <h1>
                                <field name="employee" attrs="{'readonly':[('state','!=', 'draft')]}"
                                       placeholder="Employee" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="start_date_time" required="1"
                                       attrs="{'readonly':[('state','!=', 'draft')]}"/>
                                <field name="start_date" required="1" invisible="1"/>
                                <field name="department" readonly="1"/>
                                <field name="manager" readonly="1"/>
                                <field name="approved_date" readonly="1"
                                       attrs="{'invisible':[('state','!=', 'posted')]}"/>
                                <field name="number_of_hours" widget="float_time"
                                       attrs="{'readonly':[('state','!=', 'draft')]}"/>

                            </group>
                            <group>
                                <field name="end_date_time" required="1"
                                       attrs="{'readonly':[('state','!=', 'draft')]}"/>
                                <field name="end_date" required="1" invisible="1"/>
                                <field name="category" widget="many2many_tags" readonly="1"/>
                                <field name="is_payroll" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                                <field name="approved_by" readonly="1"
                                       attrs="{'invisible':[('state','!=', 'posted')]}"/>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="overtime_tree_view" model="ir.ui.view">
            <field name="name">hr.overtime.tree</field>
            <field name="model">hr.overtime</field>
            <field name="arch" type="xml">
                <tree string="Overtime">
                    <field name="name"/>
                    <field name="employee"/>
                    <field name="start_date_time"/>
                    <field name="end_date_time"/>
                    <field name="number_of_hours"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="overtime_calendar_view" model="ir.ui.view">
            <field name="name">hr.overtime.calendar</field>
            <field name="model">hr.overtime</field>
            <field name="arch" type="xml">
                <calendar string="Overtime" date_start="start_date">
                    <field name="employee"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </calendar>
            </field>
        </record>

        <record id="overtime_graph_view" model="ir.ui.view">
            <field name="name">hr.overtime.graph</field>
            <field name="model">hr.overtime</field>
            <field name="arch" type="xml">
                <graph string="Overtime">
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="employee"/>
                    <field name="department"/>
                    <field name="number_of_hours" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="overtime_search_view" model="ir.ui.view">
            <field name="name">hr.overtime.search</field>
            <field name="model">hr.overtime</field>
            <field name="arch" type="xml">
                <search string="Overtime">
                    <group expand="0" string="Group By">
                        <filter string="Employee" name="employee" domain="[('employee','!=', False)]"
                                context="{'group_by':'employee'}"/>
                        <filter string="Department" name="department" domain="[('department','!=', False)]"
                                context="{'group_by':'employee'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="overtime_act_window" model="ir.actions.act_window">
            <field name="name">Horas Extras</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.overtime</field>
            <field name="view_mode">tree,form,calendar,graph</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Não há exemplos, clique aqui para criar Hora extra.
                </p>
            </field>
        </record>

        <menuitem name="Overtime" id="overtime_menu" parent="hr_attendance.menu_hr_attendance_root"
                  action="overtime_act_window"/>

    </data>
</odoo>