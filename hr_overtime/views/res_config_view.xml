<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_hr_overtime_conf_form">
            <field name="name">hr.overtime.res.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='hr_attendance']" position="inside">
                    <h2 id="account">Hora Extra</h2>
                    <div name="hr_account" class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="rate_overtime_normal"
                                       string="Taxa de horas extras normal"/>
                                <div class="text-muted">
                                    Taxa normal
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="rate_overtime_normal"
                                               class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="day_overtime"
                                       string="Hora extra / Dia"/>
                                <div class="text-muted">
                                   Limite de horas por dia
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="day_overtime"
                                               class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="month_overtime"
                                       string="Hora extra / Mês"/>
                                <div class="text-muted">
                                    Limite de horas por mês
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="month_overtime"
                                               class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="rate_overtime_exceed" string="Taxa de horas extras excedida"/>
                                <div class="text-muted">
                                   Taxa excedida
                                </div>
                                <div class="text-muted">
                                    <field name="rate_overtime_exceed"/>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="year_overtime" string="Hora extra / Ano"/>
                                <div class="text-muted">
                                    Limite de horas por ano
                                </div>
                                <div class="text-primary">
                                    <field name="year_overtime"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
